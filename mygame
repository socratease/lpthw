#VARIABLES
time = 5
timeisup = False
firstchoice = None
tigerchoice = None
chairchoice = None
life = 3
happychair = False
tigerfriend = False
myhatnow = False
#
#
#UTILTIES
def endgame():
  print "Your game is over. Feel free to tempt fate again..."

def contin():
  raw_input("[any key to continue]")
  
def dead():
  global tigerfriend
  print """
  You have no more life. :(
  """
  if tigerfriend is True:
    print "Your tiger friend is very very sad."
  else:
    pass
  endgame()
  
def checktime(limit):
  global time, timeisup
  time -= 1
  if time <= limit:
    timeisup = True
  else:
    print "..."

def loselife(x):
  global life
  contin()
  life -= x
  print "Life: ", life
  if life <= 0:
    dead()
  else:
    pass

